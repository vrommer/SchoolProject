<div class="row">
    <div class="offset-md-2 col-md-8">
        <section>
            <div asp-validation-summary="All"></div>
            <form method="POST" id="synched-ask">
                <h4>Ask your question</h4>
                <hr />
                <div class="form-group">
                    <input asp-for="Question.Title" type="text" class="form-control" aria-describedby="questionTitle" placeholder="Title">
                </div>
                <div class="form-group">
                    <textarea asp-for="Question.Body"></textarea>
                </div>
                <div class="form-group">
                    <input asp-for="Question.Tags" type="text" class="form-control question-tags">
                </div>
                <button type="submit" class="btn btn-secondary">Submit</button>
            </form>
        </section>
    </div>
</div>

