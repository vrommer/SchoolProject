@using Microsoft.AspNetCore.Identity
@using Synchronized.Domain
@using Synchronized.SharedLib
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li class="navbar-brand"><a asp-page="/Questions/Index" class="nav-link">Questions</a></li>
        <li class="navbar-brand"><a asp-page="/Tags/Index" class="nav-link">Tags</a></li>
        <li class="navbar-brand"><a asp-page="/Users/Index" class="nav-link">Users</a></li>
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="navbar-brand"><a asp-page="/Questions/Ask" class="nav-link">Ask</a></li>
        }
        else
        {
            <li class="navbar-brand"><a asp-page="/Account/Login" class="nav-link">Ask</a></li>
        }
        @if (SignInManager.IsSignedIn(User) && (User.IsInRole(Constants.EDITOR)|| User.IsInRole(Constants.MODERATOR)))
        {
            <li class="navbar-brand"><a asp-page="/Questions/Review" class="nav-link">Review</a></li>
        }        
    </ul>
</div>

